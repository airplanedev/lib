{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "oneOf": [
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "node": {
              "type": "object",
              "properties": {
                "entrypoint": { "type": "string" },
                "nodeVersion": { "enum": ["12", "14", "15", "16"] },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["entrypoint", "nodeVersion"]
            }
          },
          "required": ["node"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "python": {
              "type": "object",
              "properties": {
                "entrypoint": { "type": "string" },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["entrypoint"]
            }
          },
          "required": ["python"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "shell": {
              "type": "object",
              "properties": {
                "entrypoint": { "type": "string" },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["entrypoint"]
            }
          },
          "required": ["shell"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "image": { "type": "string" },
                "command": { "type": "string" },
                "entrypoint": { "type": "string" },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["image"]
            }
          },
          "required": ["image"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "deno": {
              "type": "object",
              "properties": {
                "entrypoint": { "type": "string" },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["entrypoint"]
            }
          },
          "required": ["deno"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "go": {
              "type": "object",
              "properties": {
                "entrypoint": { "type": "string" },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["entrypoint"]
            }
          },
          "required": ["go"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "dockerfile": {
              "type": "object",
              "properties": {
                "dockerfile": { "type": "string" },
                "envVars": { "$ref": "#/$defs/envVars" }
              },
              "additionalProperties": false,
              "required": ["dockerfile"]
            }
          },
          "required": ["dockerfile"]
        }
      ]
    },

    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "sql": {
              "type": "object",
              "properties": {
                "resource": { "type": "string" },
                "entrypoint": { "type": "string" },
                "queryArgs": {
                  "type": "object",
                  "patternProperties": {
                    ".*": { "type": ["string", "boolean", "number"] }
                  }
                }
              },
              "additionalProperties": false,
              "required": ["resource", "entrypoint"]
            }
          },
          "required": ["sql"]
        }
      ]
    },
    {
      "allOf": [
        { "$ref": "#/$defs/baseDefinition" },
        {
          "type": "object",
          "properties": {
            "rest": {
              "type": "object",
              "properties": {
                "resource": { "type": "string" },
                "method": { "enum": ["GET", "POST", "PATCH", "PUT", "DELETE"] },
                "path": { "type": "string" },
                "urlParams": {
                  "type": "object",
                  "patternProperties": {
                    ".*": { "type": ["string", "boolean", "number"] }
                  }
                },
                "headers": {
                  "type": "object",
                  "patternProperties": {
                    ".*": { "type": ["string", "boolean", "number"] }
                  }
                },
                "bodyType": {
                  "enum": ["json", "raw", "form-data", "x-www-form-urlencoded"]
                },
                "body": { "type": "string" },
                "formData": {
                  "type": "object",
                  "patternProperties": {
                    ".*": { "type": ["string", "boolean", "number"] }
                  }
                }
              },
              "additionalProperties": false,
              "required": ["resource", "method", "path", "bodyType"]
            }
          },
          "required": ["rest"]
        }
      ]
    }
  ],
  "properties": {
    "name": true,
    "slug": true,
    "description": true,
    "parameters": true,
    "constraints": true,
    "requireRequests": true,
    "allowSelfApprovals": true,
    "timeout": true,

    "node": true,
    "python": true,
    "shell": true,
    "image": true,
    "deno": true,
    "go": true,
    "dockerfile": true,
    "sql": true,
    "rest": true
  },
  "additionalProperties": false,

  "$defs": {
    "parameter": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "$ref": "#/$defs/slug" },
        "type": {
          "enum": [
            "shorttext",
            "longtext",
            "sql",
            "boolean",
            "upload",
            "integer",
            "float",
            "date",
            "datetime",
            "configvar"
          ]
        },
        "description": { "type": "string" },
        "default": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" }
          ]
        },
        "required": { "type": "boolean" },
        "options": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "value": {
                    "anyOf": [
                      { "type": "string" },
                      { "type": "number" },
                      { "type": "boolean" }
                    ]
                  }
                },
                "additionalProperties": false
              }
            ]
          }
        },
        "regex": {
          "type": "string",
          "format": "regex"
        }
      },
      "additionalProperties": false,
      "required": ["name", "slug", "type"]
    },
    "envVars": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "properties": {
                "config": { "type": "string" }
              },
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "maxLength": 50
    },
    "baseDefinition": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "$ref": "#/$defs/slug" },
        "description": { "type": "string" },
        "parameters": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/parameter"
          }
        },
        "constraints": {
          "type": "object",
          "properties": {
            "labels": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": { "type": "string" },
                  "value": { "type": "string" }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "requireRequests": { "type": "boolean" },
        "allowSelfApprovals": { "type": "boolean" },
        "timeout": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "required": ["name", "slug"]
    }
  }
}
